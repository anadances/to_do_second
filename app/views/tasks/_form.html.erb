<% if @task.errors.any? %>
  <h3>Please correct these problems:</h3>
  <ul>
    <% @task.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_for @task do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.hidden_field(:list_id) %>
  <%= f.submit %>
<% end %>


