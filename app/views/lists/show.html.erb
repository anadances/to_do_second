<h1><%= @list.name %></h1>

<ul>
  <% @list.tasks.each do |task| %>
    <li><%= link_to task.name, edit_task_path(task) %> &nbsp <span><%= link_to 'delete', task, :method => :delete, :data => { :confirm => "Are you sure?" } %></span></li>
  <% end %>
</ul>
<p><%= link_to 'New Task', new_task_path(:list_id => @list.id) %></p>  
<p><%= link_to 'List of Lists', lists_path %></p>
<p><%= link_to 'Edit List', edit_list_path %></p>
