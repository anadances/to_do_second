
<h1><%= @list.name %></h1>
<div class="not-completed">
  <h3>Unfinished Tasks</h3>
  <ul>
    <% @list.not_done_tasks.each do |task| %>
      <li>
        <%= form_for task do |f| %>
          <%= f.hidden_field(:done, value: true) %>
          <%= f.submit 'Mark Done' %>
        <% end %>
        <%= link_to task.name, edit_task_path(task) %> &nbsp <%= link_to 'delete', task, :method => :delete, :data => { :confirm => "Are you sure?" } %>
      </li>
    <% end %>
  </ul>

</div>

<div class="completed">
  <h3>Completed Tasks</h3>
  <ul>
    <% @list.done_tasks.each do |task| %>
      <li><%= link_to task.name, edit_task_path(task) %></li>
    <% end %>

  </ul>
</div>
<p><%= link_to 'New Task', new_task_path(:list_id => @list.id) %></p>  
<p><%= link_to 'List of Lists', lists_path %></p>
<p><%= link_to 'Edit List', edit_list_path %></p>
<p><%= link_to 'Delete list', @list, :method => :delete, :data => { :confirm => "are you sure?"} %></p> 

